<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dialog_padding_horizontal"
    android:paddingRight="@dimen/dialog_padding_horizontal">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/file_share_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/file_share_edit_title"
            android:inputType="text"
            android:textColorHint="@color/colorPrimary" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/file_share_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/file_share_edit_describe"
            android:inputType="textMultiLine"
            android:lines="3"
            android:textColorHint="@color/colorPrimary" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>