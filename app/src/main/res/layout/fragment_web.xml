<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WebActivityFragment"
    tools:showIn="@layout/activity_web">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/open_web_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_web_browser"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/http_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_web_browser"/>
</RelativeLayout>
